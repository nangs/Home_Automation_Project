<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.setu4.home_v4.MenuActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Active Devices"
        android:id="@+id/b_active"
        android:onClick="getActive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Register New User"
        android:id="@+id/b_register"
        android:onClick="userReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Light Status"
        android:id="@+id/b_light"
        android:onClick="getLight"
        android:layout_marginTop="270dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Door Status"
        android:id="@+id/b_door"
        android:onClick="getDoor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Gas Status"
        android:id="@+id/b_gas"
        android:onClick="getGas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Control"
        android:id="@+id/b_control"
        android:onClick="userControl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp" />
</RelativeLayout>
